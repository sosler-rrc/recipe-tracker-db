generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String @id
  userSavedRecipes    UserSavedRecipes[]
  userRecipes         Recipe[]
}

model UserSavedRecipes {
  id             String @id @default(uuid())
  recipe         Recipe @relation(fields:[recipeId], references: [id], onDelete: Cascade)
  recipeId       String
  user           User @relation(fields:[userId], references: [id], onDelete: Cascade)
  userId         String
}

model Recipe {
  id             String @id @default(uuid())
  name           String
  description    String
  servings       Int
  prepTime       Int
  cookTime       Int
  ovenTemp       Int?
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  
  recipeTypeId   String
  recipeType     RecipeType @relation(fields: [recipeTypeId], references: [id])

  userId         String
  user           User @relation(fields: [userId], references: [id])
  
  ingredients         RecipeIngredient[]
  steps               RecipeStep[]
  userSavedRecipes    UserSavedRecipes[]
}

model RecipeIngredient {
  id             String @id @default(uuid())
  description    String
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  recipeId       String
  recipe         Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}

model RecipeStep {
  id             String @id @default(uuid())
  description    String
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  recipeId       String
  recipe         Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}


model RecipeType {
  id             String @id @default(uuid())
  name           String
  description    String
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  recipes        Recipe[]
}
